<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--===== Additional Eye =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationAdditionalEye</defName>
        <hediffClass>Hediff_Implant</hediffClass>
        <label>Additional eye</label>
        <description>This pawn has mutated an extra eye.</description>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Sight</capacity>
                        <offset>0.25</offset>
                    </li>
                </capMods>
                <painOffset>0.02</painOffset>
            </li>
        </stages>
        <modExtensions Inherit="false">
            <li Class="Core40k.DefModExtension_Mutations">
                <canApplyToPart>
                    <li>Head</li>
                </canApplyToPart>
            </li>
        </modExtensions>
    </HediffDef>

    <!--===== Animalistic Legs =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationAnimalisticLegs</defName>
        <hediffClass>Hediff_AddedPart</hediffClass>
        <label>animalistic legs</label>
        <description>Your legs undergo a startling transformation, assuming the look and feel of a deer's hind legs. Though deer legs are common, the legs of any animal will do.</description>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.05</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
        <stages>
            <li>
                <statFactors>
                    <MoveSpeed>1.2</MoveSpeed>
                </statFactors>
            </li>
        </stages>
        <modExtensions Inherit="false">
            <li Class="Core40k.DefModExtension_Mutations">
                <canApplyToPart>
                    <li>Leg</li>
                </canApplyToPart>
                <applyToAllParts>True</applyToAllParts>
            </li>
        </modExtensions>
    </HediffDef>

</Defs>