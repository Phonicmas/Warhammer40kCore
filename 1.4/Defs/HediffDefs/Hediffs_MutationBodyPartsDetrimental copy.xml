<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--===== Extra Leg =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationExtraLeg</defName>
        <label>extra leg</label>
        <description>This pawn has mutated an extra leg. It always seems to be a hinderence</description>
        <hediffClass>Hediff_Implant</hediffClass>
        <stages>
            <li>
                <statFactors>
                    <MoveSpeed>0.8</MoveSpeed>
                </statFactors>
            </li>
        </stages>
        <modExtensions Inherit="false">
            <li Class="Core40k.DefModExtension_Mutations">
                <canApplyToPart>
                    <li>Waist</li>
                </canApplyToPart>
            </li>
        </modExtensions>
    </HediffDef>

    <!--===== Extra Arm =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationExtraArm</defName>
        <label>extra arm</label>
        <description>This pawn has mutated an extra Arm. It always seems to be a hinderence</description>
        <hediffClass>Hediff_Implant</hediffClass>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
                <painOffset>0.02</painOffset>
            </li>
        </stages>
        <modExtensions Inherit="false">
            <li Class="Core40k.DefModExtension_Mutations">
                <canApplyToPart>
                    <li>Torso</li>
                </canApplyToPart>
            </li>
        </modExtensions>
    </HediffDef>

    <!--===== Tentacle =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationTentacleReplacement</defName>
        <label>tentacle</label>
        <description>This pawn has mutated an useless tentacle in place of an arm or leg.</description>
        <hediffClass>Hediff_AddedPart</hediffClass>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0</partEfficiency>
            <betterThanNatural>false</betterThanNatural>
        </addedPartProps>
        <stages>
            <li>
                <painOffset>0.02</painOffset>
            </li>
        </stages>
        <modExtensions Inherit="false">
            <li Class="Core40k.DefModExtension_Mutations">
                <canApplyToPart>
                    <li>Arm</li>
                    <li>Leg</li>
                    <li>Head</li>
                </canApplyToPart>
            </li>
        </modExtensions>
    </HediffDef>

    <!--===== Tentacle =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationTentacleRandom</defName>
        <label>tentacle</label>
        <description>This pawn has mutated an useless tentacle somewhere on their body.</description>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.15</offset>
                    </li>
                </capMods>
                <painOffset>0.02</painOffset>
            </li>
        </stages>
    </HediffDef>

    <!--===== Rotting Flesh =====-->
    <HediffDef ParentName="BEWH_MutatedLimbBase">
        <defName>BEWH_MutationRottingFlesh</defName>
        <label>rotting flesh</label>
        <description>Every now and then, rancid meat sloughs from your body, exposing newly rotting areas beneath.</description>
        <stages>
            <li>
                <statOffsets>
                    <ArmorRating_Blunt>-0.3</ArmorRating_Blunt>
                    <ArmorRating_Sharp>-0.3</ArmorRating_Sharp>
                    <ArmorRating_Heat>-0.3</ArmorRating_Heat>

                    <PawnBeauty>-2</PawnBeauty>
                    <SocialImpact>-0.5</SocialImpact>
                    <NegotiationAbility>-0.5</NegotiationAbility>
                </statOffsets>
                <painOffset>0.02</painOffset>
            </li>
        </stages>
    </HediffDef>



</Defs>