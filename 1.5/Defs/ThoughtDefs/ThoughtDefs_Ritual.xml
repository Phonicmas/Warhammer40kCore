<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Recieved Gift -->

    <ThoughtDef>
        <defName>BEWH_RecievedGift</defName>
        <stackLimit>1</stackLimit>
        <durationDays>4</durationDays>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Chaos plead was answered</label>
                <description>I pleaded with the chaos gods for power and recieved a gift from them!</description>
                <baseMoodEffect>+5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Recieved No Gift -->

    <ThoughtDef>
        <defName>BEWH_RecievedNoGift</defName>
        <stackLimit>1</stackLimit>
        <durationDays>4</durationDays>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>Chaos plead was left unanswered</label>
                <description>I tried to plead with the chaos gods for power, but none responded...</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

</Defs>